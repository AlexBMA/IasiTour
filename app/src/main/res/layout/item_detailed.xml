<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <TextView
            android:id="@+id/landmarks_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="Name of the landmark" />

        <TextView
            android:id="@+id/landmarks_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="address"

            />

        <TextView
            android:id="@+id/landmarks_admission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Admission" />

        <TextView
            android:id="@+id/landmarks_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textSize="24sp"
            tools:text="Description of the landmark" />


        <GridView
            android:id="@+id/img_grid"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:numColumns="2"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbars="horizontal">

        </GridView>


    </LinearLayout>


</ScrollView>
